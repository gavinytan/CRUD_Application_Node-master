
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> Inventory </a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Item</h2>
            <span class="text-light">Use the below form to Update an item</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="quantity" class="text-light">Quantity</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="quantity" value="<%= user.quantity %>" placeholder="Example: 100">
        </div>
        <div class="form-group">
            <label for="Item" class="text-light">Item</label>
            <input type="text" name="item" value="<%= user.item%>" placeholder="Example: Bananas">
        </div>
        <div class="form-group">
            <label for="location" class="text-light">Location</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="location" value="Warehouse 1" <%= user.location == 'Warehouse 1' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">Warehouse 1</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="location" value="Warehouse 2"  <%= user.location == 'Warehouse 2' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">Warehouse 2</label>
            </div>
        </div>

        <div class="form-group">
            <label for="location" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" <%= user.status == 'Active' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" <%= user.status == 'Inactive' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
