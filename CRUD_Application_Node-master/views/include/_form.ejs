 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="quantity" class="text-light">Quantity</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="quantity" value="" placeholder="Example: 500">
        </div>
        <div class="form-group">
            <label for="item" class="text-light">Item</label>
            <input type="text" name="item" value="" placeholder="Example: Bananas">
        </div>
        <div class="form-group">
            <label for="location" class="text-light">Location</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="location" value="Warehouse 1" >
                <label for="radio-2" class="radio-label">Warehouse 1</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="location" value="Warehouse 2" >
                <label for="radio-3" class="radio-label">Warehouse 2</label>
            </div>
        </div>

        <div class="form-group">
            <label for="location" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" >
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" >
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>